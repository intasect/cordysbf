<binding-template>
	<!--  
		Contains the common decision case XML format. Content source specific templates 
		have to import this and modify the handlers. 
		Note: the the DecisionCase class have to be specified as the 'default' bean.
	-->
	<beans>
		<bean beanid="dc-attribute" class="com.cordys.coe.bf.content.types.coboc.folders.DecisionCaseAttribute" />		
		<bean beanid="dc-rule" class="com.cordys.coe.bf.content.types.coboc.folders.DecisionCaseRule" />		
		<bean beanid="dc-condition" class="com.cordys.coe.bf.content.types.coboc.folders.ConditionTemplate" />		
		<bean beanid="dc-action" class="com.cordys.coe.bf.content.types.coboc.folders.ActionTemplate" />		
	</beans>
	
	<handlers>
		<handler type="bean" beanid="default" xmlpath="Name" fieldname="decisionCaseName" />
		<handler type="bean" beanid="default" xmlpath="Source" fieldname="sourceTemplateKey" keepchildren="true" />
		<handler type="bean" beanid="default" xmlpath="Source/@parentfolder" fieldname="sourceParentFolder"  />
		<handler type="bean" beanid="default" xmlpath="Source/@templateid" fieldname="sourceTemplateId"  />
		<handler type="bean" beanid="default" xmlpath="Description" fieldname="decisionCaseDescription" />
		<handler type="bean" beanid="default" xmlpath="RulePrefix" fieldname="rulePrefix" />
		<handler type="bean" beanid="default" xmlpath="AttributesList/Attribute" fieldname="attributes" fieldbean="dc-attribute" keepchildren="true" />		
		<handler type="bean" beanid="default" xmlpath="Mappings" fieldname="mappings" xmlfield="true" />
		<handler type="bean" beanid="default" xmlpath="RuleGroup/Rule" fieldname="rules" fieldbean="dc-rule" keepchildren="true" />		
		<handler type="bean" beanid="dc-rule" xmlpath="RuleGroup/Rule/RuleType" fieldname="ruleType"  />		
		<handler type="bean" beanid="dc-rule" xmlpath="RuleGroup/Rule/RuleNumber" fieldname="ruleNumber" />
		<handler type="bean" beanid="dc-rule" xmlpath="RuleGroup/Rule/Condition" fieldname="conditions" fieldbean="dc-condition" keepchildren="true" />		
		
		<!--  Attributes -->
		<handler type="bean" beanid="dc-attribute" xmlpath="AttributesList/Attribute/@ChosenName" fieldname="chosenName" />		
		<handler type="bean" beanid="dc-attribute" xmlpath="AttributesList/Attribute/@Name" fieldname="name" />		
		<handler type="bean" beanid="dc-attribute" xmlpath="AttributesList/Attribute/@TemplateID" fieldname="templateId" />		
		
		<!--  Condition templates -->
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/@Reference" fieldname="reference" />		
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/@DisplayName" fieldname="displayName" />		
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/@Expression" fieldname="expression" />		
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/ConditionTemplateName" fieldname="name" />			
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/ConditionTemplateId" fieldname="objectId" />			
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/ConditionRepositoryName" fieldname="conditionRepositoryName" />			
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/ConditionRepositoryId" fieldname="parentId" />			
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/ConditionRepositoryVersion" fieldname="conditionRepositoryVersion" />		
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/ConditionExpression" fieldname="conditionExpression" />			
		<handler type="bean" beanid="dc-condition" xmlpath="RuleGroup/Rule/Condition/Parameters" fieldname="parameters" xmlfield="true" />			
		
		<handler type="bean" beanid="dc-rule" xmlpath="RuleGroup/Rule/Action" fieldname="actions" fieldbean="dc-action" keepchildren="true" />		
		
		<!-- Action templates -->
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ActionType" fieldname="actionType" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ActionName" fieldname="name" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ActionTemplateId" fieldname="objectId" />				
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ActionObjectName" fieldname="name" />				
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ActionRepositoryName" fieldname="actionRepositoryName" />				
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ActionRepositoryId" fieldname="parentId" />				
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ActionRepositoryVersion" fieldname="actionRepositoryVersion" />				
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/Parameters" fieldname="parameters" xmlfield="true" />

		<!-- Coboc Object Insert/Update/Delete -->
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/TemplatePath" fieldname="cobocTemplateKey" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/TemplateID" fieldname="cobocTemplateId" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/Assignments" fieldname="cobocAssignments" params="skip-empty" />		

		<!-- Inbox -->
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/User" fieldname="inboxUser" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/Role" fieldname="inboxRole" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/Subject" fieldname="inboxSubject" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/UrlToLoad" fieldname="inboxUrlToLoad" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/Description" fieldname="inboxDescription" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/Message" fieldname="inboxMessage" params="skip-empty" />		
		
		<!-- Abort transaction -->
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/AbortMessage" fieldname="abortMessage" params="skip-empty" />		
		
		<!--  Assignment -->
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/AssignmentExpression" fieldname="assignmentExpression" params="skip-empty" />		

		<!--  Web service -->
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/MethodName" fieldname="methodName" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/MethodNameSpace" fieldname="methodNameSpace" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/SoapRequest" fieldname="soapRequest" params="skip-empty" />		
		
		<!-- BPM -->
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ProcessName" fieldname="processName" params="skip-empty" />		
		<handler type="bean" beanid="dc-action" xmlpath="RuleGroup/Rule/Action/ActionDetails/ProcessInputMessage" fieldname="processInputMessage" params="skip-empty" />		
	</handlers>
	
	<template>
	      <DecisionCase xmlns="http://schemas.cordys.com/4.2/coboc">
	        <Name></Name>
	        <Source parentfolder="" templateid=""></Source>
	        <Description></Description>
	        <RulePrefix></RulePrefix>
	        <AttributesList>
	          <Attribute Name="" ChosenName="" TemplateID=""/>
	        </AttributesList>
	        <Mappings/>
	        <RuleGroup>
	          <Rule>
	            <RuleType></RuleType>
	            <RuleNumber></RuleNumber>
	            <Condition Reference="" DisplayName="" Expression="">
	              <ConditionTemplateName></ConditionTemplateName>
	              <ConditionTemplateId></ConditionTemplateId>
	              <ConditionRepositoryName></ConditionRepositoryName>
	              <ConditionRepositoryId></ConditionRepositoryId>
	              <ConditionRepositoryVersion></ConditionRepositoryVersion>
	              <ConditionExpression></ConditionExpression>
	              <Parameters>
	                <Parameter description="" value=""></Parameter>
	              </Parameters>
	            </Condition>
	            <Action>
	              <ActionDetails>
	                <ActionType></ActionType>
	                <ActionName></ActionName>
	                <ActionTemplateId></ActionTemplateId>
	                <ActionObjectName></ActionObjectName>
	                <ActionRepositoryName></ActionRepositoryName>
	                <ActionRepositoryId></ActionRepositoryId>
	                <ActionRepositoryVersion></ActionRepositoryVersion>
	                
		            <!--  Coboc Object -->
		            <TemplatePath></TemplatePath>
		            <TemplateID></TemplateID>
		            <Assignments></Assignments>
		           
		            <!--  Inbox -->
		            <User></User>
		            <Role></Role>
		            <Subject></Subject>
		            <UrlToLoad></UrlToLoad>
		            <Description></Description>
		            <Message></Message>	
		           
		            <!-- Abort transaction -->
		            <AbortMessage></AbortMessage>
		           
		            <!--  Assignment -->
		            <AssignmentExpression></AssignmentExpression>
		           
		            <!-- Web Service -->
		            <MethodName></MethodName>
		  		    <MethodNameSpace></MethodNameSpace>
				    <SoapRequest></SoapRequest>
				   
			        <!--  BPM -->
		            <ProcessName></ProcessName>
				    <ProcessInputMessage></ProcessInputMessage>
	              </ActionDetails>
	              <Parameters>
	                <Parameter description="" value=""></Parameter>
	              </Parameters>
	            </Action>
	          </Rule>
	        </RuleGroup>
	      </DecisionCase>
	</template>
</binding-template>