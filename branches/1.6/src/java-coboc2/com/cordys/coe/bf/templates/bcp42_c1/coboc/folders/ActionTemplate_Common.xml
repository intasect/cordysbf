<binding-template>
	<!--  
		Contains the common action template XML format. Content source specific templates 
		have to import this and modify the handlers. 
		Note: the the ActionTemplate class have to be specified as the 'default' bean.
	-->
	<handlers>
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ActionType" fieldname="actionType" />
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ActionName" fieldname="actionName" />
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ActionTemplateDescription" fieldname="actionTemplateDescription" />
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ActionRepositoryName" fieldname="parentKey"  />
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ActionRepositoryId" fieldname="parentId" />
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ActionRepositoryVersion" fieldname="actionRepositoryVersion" />		
		<handler type="bean" beanid="default" xmlpath="Parameters" fieldname="parameters" xmlfield="true" />

		<!-- Coboc Object Insert/Update/Delete -->
		<handler type="bean" beanid="default" xmlpath="ActionDetails/TemplatePath" fieldname="cobocTemplateKey" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/TemplateID" fieldname="cobocTemplateId" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/Assignments" fieldname="cobocAssignments" params="skip-empty" />		

		<!-- Inbox -->
		<handler type="bean" beanid="default" xmlpath="ActionDetails/User" fieldname="inboxUser" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/Role" fieldname="inboxRole" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/Subject" fieldname="inboxSubject" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/UrlToLoad" fieldname="inboxUrlToLoad" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/Description" fieldname="inboxDescription" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/Message" fieldname="inboxMessage" params="skip-empty" />		
		
		<!-- Abort transaction -->
		<handler type="bean" beanid="default" xmlpath="ActionDetails/AbortMessage" fieldname="abortMessage" params="skip-empty" />		
		
		<!--  Assignment -->
		<handler type="bean" beanid="default" xmlpath="ActionDetails/AssignmentExpression" fieldname="assignmentExpression" params="skip-empty" />		

		<!--  Web service -->
		<handler type="bean" beanid="default" xmlpath="ActionDetails/MethodName" fieldname="methodName" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/MethodNameSpace" fieldname="methodNameSpace" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/SoapRequest" fieldname="soapRequest" params="skip-empty" />		
		
		<!-- BPM -->
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ProcessName" fieldname="processName" params="skip-empty" />		
		<handler type="bean" beanid="default" xmlpath="ActionDetails/ProcessInputMessage" fieldname="processInputMessage" params="skip-empty" />		
	</handlers>
	
	<template>
       <Action>
         <ActionDetails>
           <ActionType></ActionType>
           <ActionName></ActionName>
           <ActionTemplateDescription></ActionTemplateDescription>
           <ActionRepositoryName></ActionRepositoryName>
           <ActionRepositoryId></ActionRepositoryId>
           <ActionRepositoryVersion></ActionRepositoryVersion>
           
           <!--  Coboc Object -->
           <TemplatePath></TemplatePath>
           <TemplateID></TemplateID>
           <Assignments></Assignments>
           
           <!--  Inbox -->
           <User></User>
           <Role></Role>
           <Subject></Subject>
           <UrlToLoad></UrlToLoad>
           <Description></Description>
           <Message></Message>	
           
           <!-- Abort transaction -->
           <AbortMessage></AbortMessage>
           
           <!--  Assignment -->
           <AssignmentExpression></AssignmentExpression>
           
           <!-- Web Service -->
           <MethodName></MethodName>
  		   <MethodNameSpace></MethodNameSpace>
		   <SoapRequest></SoapRequest>
		   
	       <!--  BPM -->
           <ProcessName></ProcessName>
		   <ProcessInputMessage></ProcessInputMessage>
         </ActionDetails>
         <Parameters>
         </Parameters>
       </Action>
	</template>
</binding-template>