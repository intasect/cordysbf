<binding-template>
	<!--  
		Contains the common inbox message model XML format. Content source specific templates 
		have to import this and modify the handlers. 
		Note: the the InboxModel_C3 class have to be specified as the 'default' bean.
	-->
	<handlers>
		<handler type="bean" beanid="default" xmlpath="MODEL_ID" fieldname="objectId" params="skip-insert" />
		<handler type="bean" beanid="default" xmlpath="MODEL_NAME" fieldname="name" />
		<handler type="bean" beanid="default" xmlpath="MESSAGE_TEMPLATE_ID" fieldname="parentId" params="skip-null" />
		<handler type="bean" beanid="default" xmlpath="DESCRIPTION" fieldname="description" />
		<handler type="bean" beanid="default" xmlpath="LAST_MODIFIED" fieldname="lastModified" />
		<handler type="bean" beanid="default" xmlpath="ORGANIZATION" fieldname="organization" />
		<handler type="bean" beanid="default" xmlpath="MESSAGE" fieldname="message" xmlfield="true" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/@name" fieldname="name" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/@subject" fieldname="subject" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/@description" fieldname="description" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/@flowmetadata" fieldname="flowMetaData" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/@messagemetadata" fieldname="messageMetaData" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/@display" fieldname="display" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/grid/columns" fieldname="columns" xmlfield="true" />
		<handler type="bean" beanid="default" xmlpath="MODEL/InboxModel/namespace_xml"	fieldname="namespaceXml" xmlfield="true" />
	</handlers>
	
	<template>
		<MESSAGE_MODEL>
			<MODEL_ID></MODEL_ID>
		  	<MODEL_NAME></MODEL_NAME>
		  	<MESSAGE_TEMPLATE_ID></MESSAGE_TEMPLATE_ID>
		  	<DESCRIPTION></DESCRIPTION>
		  	<LAST_MODIFIED></LAST_MODIFIED>
		  	<ORGANIZATION></ORGANIZATION>
		  	<MESSAGE>
		  	</MESSAGE>
		  	<MODEL>
		    	<InboxModel name="" subject="" description="" messagemetadata="" flowmetadata="" display="">
		      		<grid>
		        		<columns>
		        		</columns>
		      		</grid>
                   <namespace_xml>
                    </namespace_xml>		      		
		    	</InboxModel>
		  	</MODEL>
		</MESSAGE_MODEL>
	</template>
</binding-template>