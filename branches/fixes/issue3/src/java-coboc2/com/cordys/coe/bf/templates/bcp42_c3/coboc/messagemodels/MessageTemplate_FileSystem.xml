<binding-template>
	<imports>
		<template file="MessageTemplate_Common.xml" template-id="common" destpath="message-template" />
	</imports>
	
	<beans>
		<bean beanid="default" class="com.cordys.coe.bf.content.types.coboc.messagemodels.MessageTemplate" />
	</beans>
	
	<handlers>
		<handler type="property" propname="bf-version" xmlpath="@bf-version"  />
		<handler type="bean" beanid="default" xmlpath="@original-id" fieldname="originalObjectId" />
		<import-handlers template-id="common" />
		<remove-handler xmlpath="messageTemplate/messagetemplateid" />
		<remove-handler xmlpath="messageTemplate/lastmodified" />	
	</handlers>
	
	<template>
      	<message-template bf-version="" original-id="">
		</message-template>
	</template>
</binding-template>