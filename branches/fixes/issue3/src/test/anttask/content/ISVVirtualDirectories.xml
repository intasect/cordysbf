<?xml version="1.0" encoding="UTF-8"?>
<!-- Virtual directories content are stored in this xml -->
<!-- 'virtualdirectories' is the root tag here -->
<virtualdirectories>
	<!-- Every content is enclosed within the <virtualdirectory>...</virtualdirectory> tag 
		required attributes:
		alias="Alias name for the virtual directory"
		physicalpath="physical path of the directory on the machine to which the virtual directory points to"
		authtype="Basic/Inherit/Anonymous"
	-->
	<virtualdirectory alias="helloworld" physicalpath="cordys_web_dir\helloworld" authtype="Basic" />
</virtualdirectories>