<binding-template>
	<!--  
		Contains the common message template XML format. Content source specific templates 
		have to import this and modify the handlers. 
		Note: the the MessageTemplate class have to be specified as the 'default' bean.
	-->
	<handlers>
		<handler type="bean" beanid="default" xmlpath="messagetemplateid" fieldname="objectId" params="skip-insert" />
		<handler type="bean" beanid="default" xmlpath="messagetemplatename" fieldname="key" />
		<handler type="bean" beanid="default" xmlpath="description" fieldname="description" />
		<handler type="bean" beanid="default" xmlpath="lastmodified" fieldname="lastModified" />
		<handler type="bean" beanid="default" xmlpath="organization" fieldname="organization" />
		<handler type="bean" beanid="default" xmlpath="message" fieldname="message" xmlfield="true" />
	</handlers>
	
	<template>
		<messageTemplate>
            <messagetemplateid></messagetemplateid>
            <messagetemplatename></messagetemplatename>
            <description></description>
            <message>
            </message>
            <organization></organization>
            <lastmodified></lastmodified>
        </messageTemplate>
	</template>
</binding-template>