<project default="dummy">
	<!-- Sets the defaults if they are not already set -->
	<property name="xmlstore.appcon.path" value="/Cordys/WCP/Application Connector" />
	<property name="xmlstore.emailmodel.path" value="/Cordys/notification/emailmodels/models" />
	<property name="xmlstore.menu.path" value="/Cordys/WCP/Menu" />
	<property name="xmlstore.toolbar.path" value="/Cordys/WCP/Toolbar" />
	<property name="xmlstore.styles.path" value="/Cordys/WCP/Style" />
	<property name="xmlstore.xforms.path" value="/Cordys/WCP/XForms/runtime" />
	<property name="xmlstore.wsappserver.path" value="/Cordys/WS-AppServer" />
	
	<!-- Pattern set for all generic XMLStore content -->
    <patternset id="xmlstore.content.filter">
    	<exclude name="${xmlstore.appcon.path}/**"/>
    	<exclude name="${xmlstore.emailmodel.path}/**"/>
    	<exclude name="${xmlstore.menu.path}/**"/>
    	<exclude name="${xmlstore.toolbar.path}/**"/>
    	<exclude name="${xmlstore.styles.path}/**"/>    	
    	<exclude name="${xmlstore.xforms.path}/**"/>
   		<exclude name="${xmlstore.wsappserver.path}/**"/>
    </patternset>
	
	<!-- Pattern set for CoBOC folder content -->
	<patternset id="coboc.folders.path.filter">
		<exclude name="/cordys/cas/**" />
	</patternset>	
	
	<!-- Pattern set for Studio BPM content -->
	<patternset id="studio.bpm.path.filter">
		<include name="${studio.bpm.root.path}/**" />
	</patternset>

	<!-- Pattern set for Studio XForms content -->
	<patternset id="studio.xforms.path.filter">
		<include name="/**" />
	</patternset>
	
	<!-- Pattern set for Localization content -->
	<patternset id="localizations.path.filter">
		<exclude name="Cordys.Integrator.Messages.xml,Cordys.XForms.Messages.xml,Cordys.Orchestrator.Messages.xml,Cordys.Portal.Messages.xml,Cordys.Studio.Messages.xml" />
	</patternset>
	<patternset id="localizations.path.filter.delete">
		<exclude name="Cordys.Integrator.Messages.xml"/>
		<exclude name="Cordys.XForms.Messages.xml"/>
		<exclude name="Cordys.Orchestrator.Messages.xml"/>
		<exclude name="Cordys.Portal.Messages.xml"/>
		<exclude name="Cordys.Studio.Messages.xml"/>
	</patternset>
	
	<patternset id="xreports.path.filter">
		<include name="**/xreport.metadata"/>
	</patternset>
	
	<target name="dummy" />
</project>