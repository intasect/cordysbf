<binding-template>
	<!--  
		Contains the common email message model XML format. Content source specific templates 
		have to import this and modify the handlers. 
		Note: the the EmailModel class have to be specified as the 'default' bean.
	-->
	<handlers>
		<handler type="bean" beanid="default" xmlpath="description" fieldname="description" />
		<handler type="bean" beanid="default" xmlpath="templatetype" fieldname="templatetype" />
		<handler type="bean" beanid="default" xmlpath="textform" fieldname="textform" />
		<handler type="bean" beanid="default" xmlpath="emailform" fieldname="emailform" xmlfield="true" />
		<handler type="bean" beanid="default" xmlpath="namespace_xml" fieldname="namespaceXml" xmlfield="true" />
		<handler type="bean" beanid="default" xmlpath="subject" fieldname="subject" />
	</handlers>
	
	<template>
		<EmailModel>
              <description></description>
              <templatetype></templatetype>
              <textform/>
              <subject></subject>
              <emailform template="" layout="original" style="">
              </emailform>
              <namespace_xml>
			  </namespace_xml>
        </EmailModel>
	</template>
</binding-template>